<header class="site-header" role="banner">
  <div class="c-masthead">
    <h1 class="c-masthead__title"><a href="/">{{ author.name }}</a></h1>
    <nav role="navigation">
      <ul class="c-site-nav">
        {%- for nav in collections.nav -%}
          <li class="c-site-nav__item{% if nav.url == page.url %} is-active{% endif %}">
            <a class="c-site-nav__link" href="{{ nav.url | url }}">{{ nav.data.navTitle }}</a>
          </li>
        {%- endfor -%}
      </ul>
    </nav>
  </div>
</header>
